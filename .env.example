# AnimeHub Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Supabase Configuration
# ===========================================
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional - Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ===========================================
# Server Configuration
# ===========================================
PORT=3001
NODE_ENV=development

# Backend API URL (for frontend to connect to Express server)
# Local development: http://localhost:3001
# Docker: http://localhost:3001 (or container IP)
# Production: https://your-backend-domain.com
VITE_BACKEND_URL=http://localhost:3001

# ===========================================
# Optional - Redis Cache Configuration
# ===========================================
REDIS_URL=redis://localhost:6379
# OR use Upstash Redis REST API
UPSTASH_REDIS_REST_URL=
IN_MEMORY_MAX_ENTRIES=500

# ===========================================
# Optional - Scraper Configuration
# ===========================================
SCRAPER_MAX_CONCURRENCY=2
SCRAPER_BREAKER_THRESHOLD=8
SCRAPER_BREAKER_COOLDOWN_MS=30000

# ===========================================
# Optional - Frontend Configuration
# ===========================================
# Disable console logs in production
VITE_DISABLE_CONSOLE=false

# Enable production optimizations
VITE_PRODUCTION_MODE=false

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# Error tracking (set your Sentry DSN or other error tracking service)
VITE_SENTRY_DSN=
VITE_ENABLE_ERROR_TRACKING=false

# Analytics
VITE_ENABLE_ANALYTICS=false

# CDN Configuration
VITE_CDN_URL=

# Image optimization
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_IMAGE_QUALITY=80

# Caching
VITE_CACHE_TTL=300000
VITE_ENABLE_SERVICE_WORKER=true

# Database optimization
VITE_DB_POOL_SIZE=10
VITE_DB_QUERY_TIMEOUT=30000

# Video streaming
VITE_ENABLE_VIDEO_PRELOADING=true
VITE_VIDEO_BUFFER_SIZE=10

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true

# Build optimizations
VITE_ENABLE_TREE_SHAKING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_CHUNK_SIZE_LIMIT=500

# Monitoring
VITE_ENABLE_REAL_USER_MONITORING=false
VITE_RUM_SAMPLE_RATE=0.05

# Base path (for deployment in subdirectory)
BASE_PATH=/

